  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "postinstall": "yarn build:packages",
    "fix": "yarn lint:fix && yarn prettier:fix",
    "lint": "eslint ./ --ext js,jsx,ts,tsx",
    "lint:fix": "eslint ./ --ext js,jsx,ts,tsx --fix",
    "prettier": "prettier --check \"./**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,jsx,ts,tsx}\"",
    "dev:client": "yarn workspace @reki/client dev",
    "dev:api": "yarn workspace @reki/api dev",
    "dev:main": "yarn workspace @reki/main dev",
    "dev:dashboard": "yarn workspace @reki/dashboard dev",
    "dev:admin": "yarn workspace @reki/admin dev",
    "dev:blog": "yarn workspace @reki/blog dev",
    "dev:docs": "yarn workspace @reki/docs dev",
    "build:client": "yarn workspace @reki/client build",
    "build:api": "yarn workspace @reki/api build",
    "build:main": "yarn workspace @reki/main build",
    "build:dashboard": "yarn workspace @reki/dashboard build",
    "build:admin": "yarn workspace @reki/admin build",
    "build:blog": "yarn workspace @reki/blog build",
    "build:docs": "yarn workspace @reki/docs build",
    "start:client": "yarn workspace @reki/client start",
    "start:api": "yarn workspace @reki/api start",
    "start:main": "yarn workspace @reki/main start",
    "start:dashboard": "yarn workspace @reki/dashboard start",
    "start:admin": "yarn workspace @reki/admin start",
    "start:blog": "yarn workspace @reki/blog start",
    "start:docs": "yarn workspace @reki/docs start",
    "build:apps": "node scripts/build-apps",
    "build:packages": "node scripts/build-packages"
  },
  "workspaces": {
    "packages": [
      "apps/**",
      "shared/**",
      "packages/**"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "resolutions": {
    "yup": "^0.32.9",
    "@hitechline/reactools": ">=1.1.2"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/plugin-proposal-class-properties": "7.16.0",
    "@babel/plugin-proposal-decorators": "7.16.4",
    "@babel/plugin-transform-typescript": "7.16.1",
    "@babel/preset-env": "7.16.4",
    "@babel/preset-typescript": "7.16.0",
    "@hitechline/eslint-config": "2.0.2",
    "@types/node": "16.11.9",
    "@types/react-input-mask": "3.0.1",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "babel-plugin-module-resolver": "4.1.0",
    "cross-env": "7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "4.0.0",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "typescript": "4.5.2"
  }
}
