{
  "name": "@reki/client",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "directory": "apps/backend/client",
    "url": "git+https://github.com/izakdvlpr/reki-client.git"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --no-notify --transpile-only -r tsconfig-paths/register src/index.ts",
    "start": "node build/index.js",
    "migration:create": "typeorm migration:create -n",
    "typeorm": "ts-node-dev --transpile-only -r tsconfig-paths/register ../../../node_modules/typeorm/cli.js",
    "schema:sync": "yarn build && yarn cross-env NODE_ENV=production yarn typeorm schema:sync",
    "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
    "prebuild": "rimraf build"
  },
  "dependencies": {
    "@reki/logger": "*",
    "@reki/utils": "*",
    "discord.js": "12.5.3",
    "dotenv-defaults": "^3.0.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/dotenv-defaults": "2.0.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "ts-node": "^10.2.0",
    "ts-node-dev": "1.1.6",
    "tsconfig-paths": "3.9.0"
  }
}
